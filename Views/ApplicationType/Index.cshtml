@model IEnumerable<ApplicationType>

<div class="container" p-3>
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Application List</h2>
        </div>
        <div class="col-6">
            <a asp-controller="ApplicationType" asp-action="Create" class="btn btn-primary"><i class="fa-solid fa-plus"></i> &nbsp; Create Application</a>
        </div>
    </div>


    <br /><br />

    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>
                        Application Name
                    </th>
                    <th>

                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td width="70%">@item.Name</td>
                        <td class="text-center">
                            <div class="w-75 btn-group mx-2" role="group">
                                <a asp-controller="ApplicationType" asp-route-Id="@item.Id" asp-action="Edit" class="btn btn-primary">
                                    <i class="fa-solid fa-pen-to-square"></i> &nbsp; Edit
                                </a>
                                <a asp-controller="ApplicationType" asp-route-Id="@item.Id" asp-action="Delete" class="btn btn-danger">
                                    <i class="fa-solid fa-trash-can"></i> &nbsp; Delete
                                </a>
                            </div>
                        </td>
                    </tr>

                }
            </tbody>
        </table>
    }
    else
    {
        <p> No Application exists. </p>
    }
</div>
